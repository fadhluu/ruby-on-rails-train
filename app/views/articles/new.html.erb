<%= content_for :title do %>
  New Article
<% end %>
<%= content_for :body do %>
  <%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder:'Title', class:'form-control'%>
      <%= @article.errors[:title].first unless @article.errors[:title].blank? %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, cols:20, rows:10, placeholder:'Content', class:'form-control'%>
      <%= @article.errors[:content].first unless @article.errors[:content].blank? %>
    </div>
    <div class="form-group">
      <%= f.label :status %>
      <div class="form-check form-check-inline-check">
        <%= f.radio_button :status, "active", class:'form-check-input' %>
        <%= label :article_status, 'active', class:'form-check-label'%>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :status, "off", class:'form-check-input'%>
        <%= label :article_status, 'off', class:'form-check-label' %>
      </div>
      <%= f.hidden_field :creator, value: current_user.username %>
    </div>
    <%= f.submit :submit %>
  <% end %>
<% end %>
