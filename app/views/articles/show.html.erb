<%= content_for :title do %>
  <%= @article.title %>
<% end %>
<%= content_for :body do %>
  <div class="card">
    <div class="card-body">
      <h1 class='text-center display-3 card-title'><%= @article.title %></h2>
      <p class="card-text text-center">
        <%= @article.content %>
      </p>
    </div>
  </div>
  <div class="row my-4">
    <div class="col-12">
      <ul class="list-group">
        <% @article.comment.each do |c| %>
          <li class="list-group-item">
            <%= c.content %>
            <%= link_to 'view', article_comment_path(@article.id, c.id) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%= link_to 'Articles List', articles_path, class: 'btn btn-primary'%>
  <%= form_for [@article, @comment] do |f| %>
    <%= f.label :Comment, "Comment" %>
    <%= f.text_field :content, placeholder: 'Comment'%>
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  <% end %>
<% end %>
